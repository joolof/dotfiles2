snippet /al "alpha" iA
\alpha
endsnippet

snippet /be "beta" iA
\beta
endsnippet

snippet /nu "nu" iA
\nu
endsnippet

snippet /la "lambda" iA
\lambda
endsnippet

snippet /sb "subscript" iA
_{$1}
endsnippet

snippet /sp "superscript" iA
^{$1}
endsnippet

snippet mrm "Mathrm" iA
\mathrm{$1}
endsnippet

