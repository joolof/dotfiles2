	\centering
	\includegraphics[width=0.8\linewidth]{PDF/${2:name.ext}}
	\caption{${2/(\w+)\.\w+/\u$1/}$0}%
	\label{fig:${2/(\w+)\.\w+/$1/}}
\end{figure}
endsnippet

