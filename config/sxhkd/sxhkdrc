# wm independent hotkeys

# terminal emulator
super + Return
	kitty
# negative -w arg to account for a border width (default: 100%)

super + t
    bspc rule -a \* -o state=floating rectangle=840x1200+2500+200 && kitty
    # tdrop -ma -w 94% -x 3% -y 0% -h 50% kitty

# super + o
#     $HOME/.scripts/rofi_favorite.py

# Taskwarrior
super + @p
    scrot -s -e 'mv $f ~/Pictures/screenshots/%Y-%m-%d_%H.%M.%S.png'

# $HOME/.scripts/rofi_taskwarrior.py

# MPV from clipboard
#super + y
    #$HOME/.dotfiles/scripts/mpv-play.py >/home/joo/tmp

# Lock screen
super + shift + x
    betterlockscreen -l

super + space
    killall mpv

# Media keys

# Play pause
alt + p
    playerctl --player=spotify play-pause

# Next song
alt + n
    playerctl --player=spotify next

# Previous song
XF86AudioPrev
    playerctl --player=spotify previous

# Increase sound volume
alt + equal
    pactl set-sink-volume @DEFAULT_SINK@ +5%

# Decrease sound volume
alt + minus
    pactl set-sink-volume @DEFAULT_SINK@ -5%

# Mute sound
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

# Decrease screen brightness
XF86MonBrightnessUp
    ~/.scripts/brightness.sh + eDP-1
    # xrandr --output eDP-1 -brightness 1.0

# decrease screen brightness
XF86MonBrightnessDown
    ~/.scripts/brightness.sh - eDP-1
    # xrandr --output eDP-1 -brightness 0.5 
    # xbacklight -dec 10 

# program launcher
super + d
	rofi -show drun -width 40 -eh 1

#Screenshots
# Print
#     scrot '~/Pictures/screenshots/%Y-%m-%d_%H.%M.%S.png'

# shift + @Print
#     scrot -s '~/Pictures/screenshots/%Y-%m-%d_%H.%M.%S.png'

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {w,shift + w,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# dunst notification test
super + u
    $HOME/.scripts/dtest



