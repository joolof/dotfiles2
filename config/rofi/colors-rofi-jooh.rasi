* {
active-background: #222222;
active-foreground: #c2c2b0;
normal-background: #222222;
normal-foreground: #c2c2b0;
urgent-background: #222222;
urgent-foreground: #c2c2b0;

alternate-active-background: #222222;
alternate-active-foreground: #c2c2b0;
alternate-normal-background: #222222;
alternate-normal-foreground: #c2c2b0;
alternate-urgent-background: #222222;
alternate-urgent-foreground: #c2c2b0;

selected-active-background: #3A4753;
selected-active-foreground: #c2c2b0;
selected-normal-background: #515862;
selected-normal-foreground: #c2c2b0;
selected-urgent-background: #A35E47;
selected-urgent-foreground: #c2c2b0;

background-color: #222222;
background: #222222;
foreground: #c2c2b0;
border-color: #222222;
spacing: 2;
}

#window {
background-color: #333333;
border: 1;
padding: 1.5ch;
}

#mainbox {
border: 0;
padding: 0;
}

#message {
border: 0px 0px 0px;
border-color: @border-color;
padding: 1px;
}

#textbox {
text-color: #D8DEE9;
}

#inputbar {
children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
}

#textbox-prompt-colon {
expand: false;
str: ":";
margin: 0px 0.3em 0em 0em;
text-color: @normal-foreground;
}

#listview {
fixed-height: 0;
border: 2px 0px 0px;
border-color: @border-color;
spacing: 2px;
scrollbar: true;
padding: 2px 0px 0px;
}

#element {
border: 0;
padding: 1px;
}

#element.normal.normal {
background-color: @normal-background;
text-color: @normal-foreground;
}

#element.normal.urgent {
background-color: @urgent-background;
text-color: @urgent-foreground;
}

#element.normal.active {
background-color: @active-background;
text-color: @active-foreground;
}

#element.selected.normal {
background-color: @selected-normal-background;
text-color: @selected-normal-foreground;
}

#element.selected.urgent {
background-color: @selected-urgent-background;
text-color: @selected-urgent-foreground;
}

#element.selected.active {
background-color: @selected-active-background;
text-color: @selected-active-foreground;
}

#element.alternate.normal {
background-color: @alternate-normal-background;
text-color: @alternate-normal-foreground;
}

#element.alternate.urgent {
background-color: @alternate-urgent-background;
text-color: @alternate-urgent-foreground;
}

#element.alternate.active {
background-color: @alternate-active-background;
text-color: @alternate-active-foreground;
}

#scrollbar {
width: 4px;
border: 0;
handle-width: 8px;
padding: 0;
}

#sidebar {
border: 2px 0px 0px;
border-color: @border-color;
}

#button {
text-color: @normal-foreground;
}

#button.selected {
background-color: @selected-normal-background;
text-color: @selected-normal-foreground;
}

#inputbar {
spacing: 0;
text-color: @normal-foreground;
padding: 1px;
}

#case-indicator {
spacing: 0;
text-color: @normal-foreground;
}

#entry {
spacing: 0;
text-color: @normal-foreground;
}

#prompt {
spacing: 0;
text-color: @normal-foreground;
}
